# Использование list как стека
stack = []
stack.append('a')  # push
stack.append('b')
stack.append('c')
print("Стек:", stack)

# Основные операции со стеком
print("Верхний элемент:", stack[-1])  # peek
popped = stack.pop()                  # pop
print("Извлеченный элемент:", popped)
print("Стек после pop:", stack)
print("Размер стека:", len(stack))
print("Пустой ли стек?", len(stack) == 0)

#или

сlass Stack:
  def __init__(self):
    self.top = None
  def push(self, data):
    new_node = Node(data)
    new_node.next = self.top
    self.top = new_node
  def pop(self):
    if not self.is_empty():
      popped = self.top
      self.top = self.top.next
      popped.next = None

